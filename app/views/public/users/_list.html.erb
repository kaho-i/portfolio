<table class="table">
  <thead>
    <tr class="row">
      <th class="col-2 offset-1">プロフィール画像</th>
      <th class="col-2">ユーザー名</th>
      <th class="col-2">投稿数</th>
      <th class="col-2">フォロー数</th>
      <th class='col-2'>フォロワー数</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <% unless user.guest_user? %>
      <tr class="row">
        <td class="col-2 offset-1"><%= image_tag user.get_profile_image, size: "50x50" %></td>
        <td class="col-2"><%= link_to user.name, user_path(user) %></td>
        <td class="col-2"><%= user.posts.count %></td>
        <td class='col-2'><%= link_to user.following.count, user_followings_path(user) %></td>
        <td class='col-2'><%= link_to user.followers.count, user_followers_path(user) %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= paginate users %>
</div>