<table>
  <thead>
    <tr>
      <td></td>
      <td>店舗名</td>
      <td>投稿ユーザー</td>
      <td>投稿内容</td>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td>
        <%= link_to post_path(post) do %>
          <%= image_tag post.get_image(200,100) %>
        <% end %>
      </td>
      <td><%= post.shop_name %></td>
      <td><%= link_to post.user.name, user_path(post.user) %></td>
      <td><%= post.body %></td>
      <!--
      <td>
      <#% if favorite_by?(current_user) %>
        <#%= link_to "#{post.favorites.count}いいね", post_favorites_path, method: :delete %>
      <#% else %>
        <#%= link_to "#{post.favorites.count}いいね", post_favorites_path, method: :post %>
      <#% end %>
      </td>
      -->
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate posts %>