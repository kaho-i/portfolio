<!--h1>Admin::Shops#show</h1-->
<div class="container">
  <div class="row mt-3">
    <h2><%= @restrant.name %>の店舗詳細</h2>
  </div>
  <table class="container col-10 mx-auto mt-4">
  <tr class="row mb-3">
    <td class="col-4">店舗名</td>
    <td class="col-8"><%= @restrant.name %></td>
  </tr>
  <tr class="row mb-3">
    <td class="col-4">メールアドレス</td>
    <td class="col-8"><%= @restrant.email %></td>
  </tr>
  <tr class="row mb-3">
    <td class="col-4">電話番号</td>
    <td class="col-8"><%= @restrant.telephone_number %></td>
  </tr>
  <tr class="row mb-3">
    <td class="col-4">住所</td>
    <td class="col-8"><%= @restrant.address %></td>
  </tr>
  <tr class="row mb-5">
    <td class="col-4">営業状況</td>
    <td class="col-8">
      <% if @restrant.is_open %>
        <p>営業中</p>
      <% else %>
        <p>退会済</p>
      <% end %>
    </td>
  </tr>
  <tr class='row'>
    <td class="col-4 offset-1"><%= link_to '編集する', edit_admin_restrant_path ,class:'btn btn-block btn-success' %></td>
  </tr>
</table>
</div>