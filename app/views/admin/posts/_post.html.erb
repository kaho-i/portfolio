<table class="container">
  <thead>
    <tr class="row">
      <td class="col-2"></td>
      <th class="col-3">投稿ユーザー</td>
      <th class="col-3">店舗名</td>
      <th class="col-3">投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr class="row">
      <td class="col-2">
        <%= link_to post_path(post) do %>
          <%= image_tag post.image, size: "50x50" %>
        <% end %>
      </td>
      <td class="col-3"><%= link_to post.user.name, admin_user_path(post.user) %></td>
      <td class="col-3"><%= post.shop_name %></td>
      <td class="col-3"><%= post.body %></td>
      <!--
      <td>
      <#% if favorite_by?(current_user) %>
        <#%= link_to "#{post.favorites.count}いいね", post_favorites_path, method: :delete %>
      <#% else %>
        <#%= link_to "#{post.favorites.count}いいね", post_favorites_path, method: :post %>
      <#% end %>
      </td>
      -->
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= paginate posts %>
</div>