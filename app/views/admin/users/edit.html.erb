<!--h1>Admin::Users#edit</h1-->
<div class="container">
  <div class="row my-4">
    <h2>ユーザー情報編集画面</h2>
  </div>
  <table class="container">
  <%= form_with model: @user, url: admin_user_path, local:true do |f| %>
    <tr class="row mb-2">
      <td class="offset-1 col-3"><%= f.label :profile_image, 'プロフィール画像' %></td>
      <td class="col-8"><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*',style: 'width: 100%' %></td>
    </tr>
    <tr class="row mb-2">
      <td class="offset-1 col-3"><%= f.label :email, 'メールアドレス' %></td>
      <td class="col-8"><%= f.email_field :email, autofocus: true, autocomplete: "email",style: 'width: 100%' %></td>
    </tr>
    <tr class="row mb-2">
      <td class="offset-1 col-3"><%= f.label :name,'ニックネーム' %></td>
      <td class="col-8"><%= f.text_field :name, class: "form-control name",style: 'width:100%' %></td>
    </tr>
    <tr class="row mb-2">
      <td class="offset-1 col-3"><%= f.label :introduction, '自己紹介文' %></td>
      <td class="col-8"><%= f.text_area :introduction, placeholder: '自己紹介文を入力してください(任意)', class: "form-control introduction",style: 'width: 100%' %></td>
    </tr>
    <tr class="row mb-4">
      <td class="offset-1 col-3"><%= f.label :is_active, '会員ステータス' %></td>
      <td class="col-8">
        <%= f.radio_button :is_active, true, class: 'col-2' %> 有効
        <%= f.radio_button :is_active, false, class: 'col-2 offset-2' %> 退会済
      </td>
    </tr>
    <tr class="row">
      <td class="col-3 offset-2"><%= f.submit '変更を保存する', class: 'btn btn-block btn-success' %></td>
      <td class="col-3 offset-1"><%= link_to '変更を破棄する', admin_user_path(@user), class:'btn btn-block btn-danger' %></td>
    </tr>
  <% end %>
  </table>
</div>