<table class="container">
  <tr class="row mb-2">
    <td class="col-4">名前</td>
    <td class="col-8"><%= user.name %></td>
  </tr>
  <tr class="row mb-2">
    <td class="col-4">メールアドレス</td>
    <td class="col-8"><%= user.email %></td>
  </tr>
  <tr class="row mb-2">
    <td class="col-4">自己紹介</td>
    <td class="col-8"><%= user.introduction %></td>
  </tr>
  <tr class="row mb-4">
    <td class="col-4">会員ステータス</td>
    <td class="col-8">
      <% if user.is_active %>
        <p style="color: green">有効</p>
      <% else %>
        <p style="color: gray">退会済</p>
      <% end %>
    </td>
  </tr>
  <tr class="row">
    <td class="col-4"><%= link_to '編集する', edit_admin_user_path(user), class: 'btn btn-block btn-info' %></td>
    <td class="col-4 offset-1"><%= link_to '一覧に戻る', admin_users_path, class: 'btn btn-block btn-secondary' %></td>
  </tr>
</table>