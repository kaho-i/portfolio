<!--h1>Shop::Shops#edit</h1-->
<div class="container">
  <div class="row my-3">
    <h4><%= @restrant.name %>の店舗情報編集画面</h4>
  </div>
  <!--<#%= render 'layouts/error', obj: @restrant %>-->
  <table class="container">
    <%= form_with model: @restrant, url: shop_information_path do |f| %>
    <tr class="row mb-2">
      <td class="col-3 offset-1"><%= f.label :name, '店舗名' %></td>
      <td class="col-7"><%= f.text_field :name, autofocus: true,style: 'width:100%' %></td>
    </tr>
    <tr class="row mb-2">
      <td class="col-3 offset-1"><%= f.label :telephone_number, '電話番号(ハイフンなし)' %></td>
      <td class="col-7"><%= f.text_field :telephone_number, placeholder: '00000000000',style:'width:100%' %></td>
    </tr>
    <tr class="row mb-4">
      <td class="col-3 offset-1"><%= f.label :address, '住所' %></td>
      <td class="col-7"><%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0',style:'width: 100%' %></td>
    </tr>
    <tr class="row">
      <td class="col-3 offset-4"><%= f.submit '変更を保存する', class: 'btn btn-block btn-success' %></td>
    </tr>
    <% end %>
  </table>
</div>