<div class="container-fulid">
  <% if user_signed_in? %>
  <!-- ユーザーログイン時の表示 -->
    <nav class="row navbar navbar-light bg-secondary">
      <div class='col-2'><%= link_to 'logo', mypage_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2 offset-2'><%= link_to '会員一覧', users_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2'><%= link_to '店舗一覧', restrants_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2'><%= link_to '投稿一覧', posts_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2'><%= link_to 'ログアウト', destroy_user_session_path , method: :delete, class: 'btn btn-block btn-outline-light' %></div>
      <div class="offset-1 text-light mt-2">ようこそ、<%= current_user.name %>さん！</div>
    </nav>
  <% elsif restrant_signed_in? %>
    <!-- 店舗ログイン時の表示 -->
    <nav class="row navbar navbar-light bg-secondary">
      <div class='col-2'><%= link_to 'logo', shop_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2 offset-4'><%= link_to '予約一覧', shop_reservations_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2'><%= link_to 'マイページ', shop_mypage_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class='col-2'><%= link_to 'ログアウト', destroy_restrant_session_path , method: :delete, class: 'btn btn-block btn-outline-light' %></div>
      <div class="offset-1 text-light mt-2">検索</div>
    </nav>
  <% elsif admin_signed_in? %>
    <!-- 管理者ログイン時の表示 -->
    <nav class="row navbar navbar-light bg-secondary">
      <div class="col-2"><%= link_to 'logo', admin_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2 offset-2"><%= link_to '投稿一覧', admin_posts_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to '会員一覧', admin_users_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to '店舗一覧', admin_restrants_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to 'ログアウト', destroy_admin_session_path , method: :delete, class: 'btn btn-block btn-outline-light' %></div>
      <div class="offset-1 text-light mt-2">検索</div>
    </nav>
  <% else %>
    <!-- ログイン前の表示 -->
    <nav class="row navbar navbar-light bg-secondary">
      <div class="col-2"><%= link_to 'logo', root_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2 offset-2"><%= link_to 'About', about_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to '投稿一覧', posts_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to '新規登録', new_user_registration_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="col-2"><%= link_to 'ログイン', new_user_session_path, class: 'btn btn-block btn-outline-light' %></div>
      <div class="offset-1 text-light mt-2">検索</div>
    </nav>
  <% end %>
</div>