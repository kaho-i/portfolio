<h4>Shops#registrations</h4>
<h2>新規登録</h2>

<%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
  <%= render "shop/shared/error_messages", resource: resource %>
  
  <table>
    <tr>
      <td><%= f.label :name, '店名' %></td>
      <td><%= f.text_field :name, placeholder: '店名を入力してください' %></td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number, '電話番号(ハイフンなし)' %></td>
      <td><%= f.text_field:telephone_number, placeholder: '00000000000' %></td>
    </tr>
    <tr>
      <td><%= f.label :email, 'メールアドレス' %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@exsample.com' %></td>
    </tr>
    <tr>
      <td>
        <%= f.label :password,"パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation,"パスワード(確認用)" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </table>
<% end %>

<%= render "shop/shared/links" %>
